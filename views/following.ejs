  <body>
    <div class="bg-image"></div>
	<input type="text" name="search" id="search" placeholder="Search User" class="form-control /">
	<ul class="list-group" id="result"></ul>
	<div class="bg-text">
      <h1>You are Following</h1>
      <ul>
      	<%for(var i=0;i<arr.length;i++){%>
