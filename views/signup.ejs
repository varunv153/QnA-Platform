<html>
  <head>
      <title>Signup</title>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="crossorigin="anonymous"></script>
  <style>
    body{
      height: 100%;
      margin: 0;
    }
      .bg-image{
      /* The image used */
      background-image: url("/assets/back.jpeg");

      /* Add the blur effect */
      filter: blur(4px);
      -webkit-filter: blur(4px);

      /* Full height */
      height: 100%;

      /* Center and scale the image nicely */
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }
     #signup-table
     {
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0, 0.4); /* Black w/opacity/see-through */
        color: white;
        border: 3px solid #f1f1f1;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        width: 60%;
        padding: 20px;
        text-align: center;
     }
     .lables
     {
      font-size: 40px;
     }
     #foo,#bar
     {
        
        margin-top: 20px;
        width: 65%;
        height: 45px;
        font-size: 20px;
        z-index: 3;
        border-radius: 6px;
     }
     button
     {
      width: 90px;
      height: 45px;
      color: white;
      background-color: black;
      border: none;
      border-radius: 5px;

     }
     button:hover
     {
      background-color: darkgray;
      color:black;
      cursor: pointer;
     }
     a
     {
        text-decoration: none;
        color: black;
     }
     a:hover
     {
      font-weight: bold;
     }
     p{
      visibility: hidden;
     }
     
  </style>
  </head>
  <body>
    <div class="bg-image"></div>
    <div id="signup-table">
      <form>
          <lable for="username" class="lables">Enter your Username</lable>
        <br>
          <input type="text" name="username" placeholder="Enter your username..." id="foo" pattern="^\S+$" required>
          <p id='invalidUsername'>abc</p>
        <label for="password" class="lables">Enter Password</label>
          <br>
        <input type="password" name="password" placeholder="Enter your password..." id="bar">
        <br>
        <br>
        <button type="submit" id="btn">REGISTER</button>
      </form>
      <a href='/signup'>LOGIN</a>
    </div>
    <script src="assets/signup.js"></script>
    <script>
      $('#foo').keyup(function(){
        id = document.getElementById('invalidUsername');
        id.setAttribute("style", "visibility: hidden;")
        var s = $('#foo').val();
        var temp = s.indexOf(' ');
        
        if(temp != -1)
        {
          id.innerText = "No space";
          id.setAttribute("style", "visibility: visible;");
        }

      });

    </script>
  </body>
</html>
